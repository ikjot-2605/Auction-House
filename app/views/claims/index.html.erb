<p id="notice"><%= notice %></p>

<h1 id="header">Claims</h1>

<table id="customers">
  <thead>
    <tr>
      <th>Product_ID</th>
      <th>Product_Name</th>
      <th>Bid_Value</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @claims.each do |claim| %>
      <%if claim.user_id==current_user.id%>
      <tr>
        <td><%= claim.c_product_id %></td>
        <td><%= claim.c_product_name %></td>
        <td><%= claim.c_bid_forproduct %></td>
        
        <td><%= link_to 'Show', claim %></td>
        <td><%= link_to 'Edit', edit_claim_path(claim) %></td>
        <td><%= link_to 'Destroy', claim, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>  
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Claim', new_claim_path %>
